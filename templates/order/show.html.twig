{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }} - {{ shop_name() }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_orders') }}">My Orders</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Order #{{ order.id }}</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="bi bi-receipt"></i> Order #{{ order.id }}
                        </h2>
                        <div>
                            <span class="badge bg-{{ order.status == 'pending' ? 'warning' : (order.status == 'completed' ? 'success' : (order.status == 'cancelled' ? 'danger' : 'info')) }}">
                                {{ order.status|title }}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>Order Details</h4>
                            <div class="row mb-3">
                                <div class="col-sm-4"><strong>Order Date:</strong></div>
                                <div class="col-sm-8">{{ order.createdAt|date('F j, Y g:i A') }}</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4"><strong>Status:</strong></div>
                                <div class="col-sm-8">
                                    <span class="badge bg-{{ order.status == 'pending' ? 'warning' : (order.status == 'completed' ? 'success' : (order.status == 'cancelled' ? 'danger' : 'info')) }}">
                                        {{ order.status|title }}
                                    </span>
                                </div>
                            </div>
                            {% if order.updatedAt and order.updatedAt != order.createdAt %}
                            <div class="row mb-3">
                                <div class="col-sm-4"><strong>Last Updated:</strong></div>
                                <div class="col-sm-8">{{ order.updatedAt|date('F j, Y g:i A') }}</div>
                            </div>
                            {% endif %}

                            <h4 class="mt-4">Shipping Address</h4>
                            {% if order.shippingAddress %}
                            <div class="card bg-light">
                                <div class="card-body">
                                    <p class="mb-1"><strong>{{ order.shippingAddress.firstName }} {{ order.shippingAddress.lastName }}</strong></p>
                                    <p class="mb-1">{{ order.shippingAddress.street }}</p>
                                    {% if order.shippingAddress.street2 %}
                                    <p class="mb-1">{{ order.shippingAddress.street2 }}</p>
                                    {% endif %}
                                    <p class="mb-1">{{ order.shippingAddress.city }}, {{ order.shippingAddress.state }} {{ order.shippingAddress.zipCode }}</p>
                                    <p class="mb-1">{{ order.shippingAddress.country }}</p>
                                    {% if order.shippingAddress.phone %}
                                    <p class="mb-0">Phone: {{ order.shippingAddress.phone }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            {% else %}
                            <p class="text-muted">No shipping address provided</p>
                            {% endif %}

                            <h4 class="mt-4">Order Items</h4>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-end">Price</th>
                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in order.orderItems %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if item.product.images|length > 0 %}
                                                    <img src="{{ asset('uploads/products/' ~ item.product.images.first.filename) }}" 
                                                         alt="{{ item.product.name }}" 
                                                         class="me-3" 
                                                         style="width: 50px; height: 50px; object-fit: cover;">
                                                    {% endif %}
                                                    <div>
                                                        <h6 class="mb-0">{{ item.product.name }}</h6>
                                                        <small class="text-muted">SKU: {{ item.product.sku }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">{{ item.quantity }}</td>
                                            <td class="text-end">{{ currency_symbol() }}{{ item.price|number_format(2) }}</td>
                                            <td class="text-end">{{ currency_symbol() }}{{ (item.price * item.quantity)|number_format(2) }}</td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Order Summary</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span>{{ currency_symbol() }}{{ order.subtotal|number_format(2) }}</span>
                                    </div>
                                    {% if order.taxAmount > 0 %}
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tax:</span>
                                        <span>{{ currency_symbol() }}{{ order.taxAmount|number_format(2) }}</span>
                                    </div>
                                    {% endif %}
                                    {% if order.shippingAmount > 0 %}
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Shipping:</span>
                                        <span>{{ currency_symbol() }}{{ order.shippingAmount|number_format(2) }}</span>
                                    </div>
                                    {% endif %}
                                    {% if order.discountAmount > 0 %}
                                    <div class="d-flex justify-content-between mb-2 text-success">
                                        <span>Discount:</span>
                                        <span>-{{ currency_symbol() }}{{ order.discountAmount|number_format(2) }}</span>
                                    </div>
                                    {% endif %}
                                    <hr>
                                    <div class="d-flex justify-content-between fw-bold">
                                        <span>Total:</span>
                                        <span>{{ currency_symbol() }}{{ order.total|number_format(2) }}</span>
                                    </div>
                                </div>
                            </div>

                            {% if order.canBeCancelled() %}
                            <div class="mt-3">
                                <a href="{{ path('app_order_cancel', {'id': order.id}) }}" 
                                   class="btn btn-danger w-100"
                                   onclick="return confirm('Are you sure you want to cancel this order?')">
                                    <i class="bi bi-x-circle"></i> Cancel Order
                                </a>
                            </div>
                            {% endif %}

                            <div class="mt-3">
                                <a href="{{ path('app_orders') }}" class="btn btn-secondary w-100">
                                    <i class="bi bi-arrow-left"></i> Back to Orders
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 