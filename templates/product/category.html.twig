{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - SymfoShop{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_products') }}">Products</a></li>
            <li class="breadcrumb-item active">{{ category.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Category Info -->
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="mb-3">
                        <i class="bi bi-folder"></i> {{ category.name }}
                    </h1>
                    {% if category.description %}
                        <p class="lead text-muted">{{ category.description }}</p>
                    {% endif %}
                    <span class="badge bg-primary">{{ products|length }} products</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    {% if products|length > 0 %}
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 d-flex flex-column">
                        {% if product.mainImage %}
                            <img src="{{ product.mainImage.imagePath }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text text-muted flex-grow-1">{{ product.description|slice(0, 100) }}...</p>
                            
                            <div class="mb-2">
                                {% if product.averageRating > 0 %}
                                    <div class="text-warning">
                                        {% for i in 1..5 %}
                                            <i class="bi bi-star{{ i <= product.averageRating ? '-fill' : '' }}"></i>
                                        {% endfor %}
                                        <small class="text-muted">({{ product.averageRating }})</small>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div>
                                    <span class="h5 text-primary mb-0">${{ product.price|number_format(2) }}</span>
                                    {% if product.comparePrice > product.price %}
                                        <small class="text-muted text-decoration-line-through">${{ product.comparePrice|number_format(2) }}</small>
                                    {% endif %}
                                </div>
                                <div class="btn-group">
                                    <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="d-inline">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="bi bi-cart-plus"></i> Add
                                        </button>
                                    </form>
                                </div>
                            </div>
                            
                            {% if product.stock <= 10 and product.stock > 0 %}
                                <small class="text-warning">
                                    <i class="bi bi-exclamation-triangle"></i> Only {{ product.stock }} left!
                                </small>
                            {% elseif product.stock == 0 %}
                                <small class="text-danger">
                                    <i class="bi bi-x-circle"></i> Out of stock
                                </small>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-folder text-muted" style="font-size: 4rem;"></i>
            <h3 class="text-muted mt-3">No products in this category</h3>
            <p class="text-muted">This category doesn't have any products yet.</p>
            <a href="{{ path('app_products') }}" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Browse All Products
            </a>
        </div>
    {% endif %}
{% endblock %} 